<div class="time-tracker-container">
  {{#if this.route.isLoading}}
    <Utils::Loader/>
  {{/if}}

  <TimeEntry::TimeEntryFormComponent
    @services={{this.model.services}}
    @isLoading={{this.route.isLoading}}
    @setIsLoading={{this.route.setIsLoading}}  
    @selectedDate={{this.route.selectedDate}}
    @setSelectedDate={{this.route.setSelectedDate}}
    @setTimeEntries={{this.route.setTimeEntries}}
  />

  <TimeEntry::TimeEntryCardComponent
    @timeEntries={{this.route.timeEntries}}
    @setIsLoading={{this.route.setIsLoading}}     
  />
</div>

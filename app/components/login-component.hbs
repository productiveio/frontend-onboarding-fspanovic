<div class="login-container">
  <h2>Login</h2>
  <form {{on "submit" this.submitLogin}}>
    <div class="form-group">
      <label for="email">Email</label>
      <input
        id="email"
        type="text"
        value={{this.email}}
        {{on "input"  this.onInputChange}}
        required
      />
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input
        id="password"
        type="password"
        required
        {{on "input"  this.onInputChange }}
        value={{this.password}}
      />
    </div>
    <button type="submit" >Login</button>
  </form>
</div>